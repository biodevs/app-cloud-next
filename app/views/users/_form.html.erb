<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class='errors'>
      <h2><%= pluralize(user.errors.count, 'erro') %> proibiu este usuário de ser salvo:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit submit_name, class: 'btn btn-primary mt-2' %>
  </div>
<% end %>
<br>
<div class='col s12'>
  <%= link_to "Voltar para usuários", users_path %>
</div>